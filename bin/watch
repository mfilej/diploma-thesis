#!/usr/bin/env bash

# Watches for changes to source files and fires rake.
# Requires fsevent_watch (brew install fsevent_watch).

set -e
set -u
set -o pipefail

watch() {
  fswatch --latency 0.2 -o chapters/*.md figures/ layout.tex bibliography.bib
}

run() {
  xargs -t -I{} sh -c "rake"
}

watch | run
